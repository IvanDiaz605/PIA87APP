<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PIAREGISTROALUMNOS.views.Acceso.StudentDetails">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Student Info"
                   VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   FontSize="Large"/>

            <Label x:Name="LabelNombre"
                   FontSize="Medium"/>
            <Label x:Name="LabelApellidos"
                     FontSize="Medium"/>
            <Label x:Name="LabelMatricula"
                   FontSize="Medium"/>
            <Label x:Name="LabelCarrera"
                   FontSize="Medium"/>
            <Label x:Name="LabelCalificacion"
                   FontSize="Medium"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>